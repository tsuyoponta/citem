<div class="container p-5">
  <div class="shadow p-4 mb-5 bg-white rounded">
    <h1 class="text-center text-monospace">記事投稿</h1>
    <%= form_with model: @article, local: true do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, autocomplete: 'title', placeholder: "タイトルを入力", class: "form-control" %>
      </div>

      <div class="form-group"> 
        <%= f.label :text %>
        <%= f.text_area :text, placeholder: "本文を入力", class: "form-control", size: "60x10" %>
      </div>

      <div class="form-froup">
        <%= f.submit "投稿する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>