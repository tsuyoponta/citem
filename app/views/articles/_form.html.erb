<%= form_with model: @article, local: true do |f| %>
  <%= render 'layouts/flash_messages' %>
  
  <div class="form-group">
    <%= f.label :image, "画像" %><span class="badge badge-info ml-3">必須</span>
    <%= f.file_field :image, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "タイトル" %><span class="badge badge-info ml-3">必須</span>
    <%= f.text_field :title, autofocus: true, autocomplete: 'title', placeholder: "タイトルを入力", class: "form-control" %>
  </div>

  <div class="form-group"> 
    <%= f.label :text, "本文" %><span class="badge badge-info ml-3">必須</span>
    <%= f.text_area :text, placeholder: "本文を入力", class: "form-control", rows: "10" %>
  </div>

  <div class="form-group">
    <%= f.submit "投稿する", class: "btn btn-primary btn-block" %>
  </div>
<% end %>