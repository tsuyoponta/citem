<div class="container p-5">
  <div class="shadow p-4 mb-5 bg-white rounded">
    <h1 class="text-center text-monospace"><%= t('.sign_up') %></h1>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group">
        <%= f.label :nickname %><span class="badge badge-danger ml-3">必須</span>
        <%= f.text_field :nickname, autofocus: true, autocomplete: 'nickname', placeholder: 'ニックネームを入力', class: 'form-control' %>
        <small class="form-text text-muted">10文字以内で入力してください</small>
      </div>

      <div class="form-group">
        <%= f.label :email %><span class="badge badge-danger ml-3">必須</span>
        <%= f.email_field :email, autocomplete: 'email', placeholder: 'Eメールを入力', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %><span class="badge badge-danger ml-3">必須</span>
        <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'パスワードを入力', class: 'form-control' %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><span class="badge badge-danger ml-3">必須</span>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', placeholder: '確認用パスワードを入力', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-primary btn-block mt-5' %>
      </div>

      <hr class="my-4">

      <div class="form-group">
        <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
